<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:style="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/pokemon_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_rect_shape"

        android:backgroundTint="#FFFFFF"
        android:padding="10dp">


        <TextView
            android:id="@+id/textview_email_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/id"
            android:textColor="#373737" />

        <EditText
            android:id="@+id/editText_TextEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textview_email_label"
            android:layout_alignBottom="@+id/textview_email_label"
            android:layout_alignParentStart="true"
            android:layout_marginStart="80dp"
            android:autofillHints="example@pokegeo.com"
            android:ems="10"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/textview_password_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_email_label"
            android:layout_alignStart="@+id/textview_email_label"
            android:layout_marginTop="20dp"
            android:text="@string/password"
            android:textColor="#373737" />

        <EditText
            android:id="@+id/editTextTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/editText_TextEmailAddress"
            android:layout_alignTop="@+id/textview_password_label"
            android:layout_alignEnd="@+id/editText_TextEmailAddress"
            android:layout_alignBottom="@+id/textview_password_label"
            android:ems="10"
            android:inputType="textPassword"
            android:autofillHints="password"/>

        <Button
            android:id="@+id/button_log_in"
            style=""
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/button_sign_up"
            android:layout_alignBottom="@+id/button_sign_up"
            android:layout_marginRight="10dp"
            android:layout_toStartOf="@+id/button_sign_up"
            android:backgroundTint="#F4F4F4"
            android:text="@string/log_in"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="11sp" />

        <Button
            android:id="@+id/button_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/editTextTextPassword"
            android:layout_alignEnd="@+id/editTextTextPassword"
            android:layout_marginTop="10dp"
            android:backgroundTint="#8BC34A"
            android:text="@string/sign_up"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#FFFFFF"
            android:textSize="11sp"/>

    </RelativeLayout>
</layout>
