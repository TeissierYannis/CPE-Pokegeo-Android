<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="caughtViewModel"
            type="fr.cpe.wolodiayannis.pokemongeo.viewmodel.PokemonViewModel" />
    </data>

    <RelativeLayout
        android:id="@+id/caught_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/rounded_rect_shape"
        android:layout_margin="10dp"
        >
        <ImageView
            android:id="@+id/caught_image"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            android:layout_marginTop="5dp"
            android:src="@{caughtViewModel.getImage(context, caughtViewModel.front)}"
            android:contentDescription="@string/caught_pokemon_img_desc" />
        <TextView
            android:id="@+id/caught_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:text="@{caughtViewModel.quantity}"
            android:textColor="?colorOnPrimary"
            android:textSize="14sp"
            android:textStyle="normal"
            />
    </RelativeLayout>
</layout>