<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:style="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/pokemon_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_rect_shape"
        android:backgroundTint="#FFFFFF"
        android:padding="10dp">

        <TextView
            android:id="@+id/textview_email_label_signup"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/email"
            android:textColor="#373737" />

        <EditText
            android:id="@+id/emailEditText_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textview_email_label_signup"
            android:layout_alignBottom="@+id/textview_email_label_signup"
            android:layout_alignParentStart="true"
            android:layout_marginStart="80dp"
            android:autofillHints="example@pokegeo.com"
            android:ems="10"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/textview_pseudo_label_signup"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/textview_email_label_signup"
            android:layout_alignStart="@+id/textview_email_label_signup"
            android:layout_marginTop="10dp"
            android:text="@string/pseudo"
            android:textColor="#373737" />

        <EditText
            android:id="@+id/pseudoEditText_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/emailEditText_signup"
            android:layout_alignTop="@+id/textview_pseudo_label_signup"
            android:layout_alignBottom="@+id/textview_pseudo_label_signup"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textview_password_label_signup"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/textview_pseudo_label_signup"
            android:layout_alignStart="@+id/textview_pseudo_label_signup"
            android:layout_marginTop="10dp"
            android:text="@string/password"
            android:textColor="#373737" />

        <EditText
            android:id="@+id/passwordEditText_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/pseudoEditText_signup"
            android:layout_alignTop="@+id/textview_password_label_signup"
            android:layout_alignBottom="@+id/textview_password_label_signup"
            android:ems="10"
            android:inputType="textPassword"
            android:autofillHints="Password" />

        <TextView
            android:id="@+id/textview_confirm_password_label_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_password_label_signup"
            android:layout_alignStart="@+id/textview_password_label_signup"
            android:layout_marginTop="10dp"
            android:text="@string/confirm_password"
            android:textColor="#373737" />

        <EditText
            android:id="@+id/passwordConfirmEditText_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/passwordEditText_signup"
            android:layout_alignTop="@+id/textview_confirm_password_label_signup"
            android:layout_alignBottom="@+id/textview_confirm_password_label_signup"
            android:ems="10"
            android:inputType="textPassword" />


        <Button
            android:id="@+id/signupButton_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/passwordConfirmEditText_signup"
            android:layout_alignStart="@+id/passwordConfirmEditText_signup"
            android:layout_alignEnd="@+id/passwordConfirmEditText_signup"
            android:backgroundTint="#8BC34A"
            android:text="@string/sign_up"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#FFFFFF"
            android:textSize="11sp" />

    </RelativeLayout>
</layout>
