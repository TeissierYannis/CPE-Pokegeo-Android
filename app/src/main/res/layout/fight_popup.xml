<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/popup_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#AFAC70">

        <!-- Life bar separated by circle on top of the screen with name of pokemon on top -->
        <LinearLayout
            android:id="@+id/life_bar_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/player_pokemon_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:text="Pokemon"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/enemy_pokemon_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:text="Pokemon 2"
                android:textAlignment="textEnd"
                android:textColor="#000000"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/life_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:padding="10dp">

            <ProgressBar
                android:id="@+id/life_bar_player"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_weight="0.7"
                android:indeterminate="false"
                android:max="100"
                android:progress="100"
                android:progressDrawable="@drawable/progress_bar"
                android:secondaryProgress="100" />


            <ImageView
                android:id="@+id/life_bar_middle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_weight="0.3"
                android:src="@drawable/background_plant_shape" />


            <ProgressBar
                android:id="@+id/life_bar_right"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_weight="0.7"
                android:indeterminate="false"
                android:max="100"
                android:progress="100"
                android:progressDrawable="@drawable/progress_bar" />
        </LinearLayout>

        <!-- Pokemon image at the top right -->
        <ImageView
            android:id="@+id/enemy_pokemon_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="150dp"
            android:layout_marginEnd="50dp"
            android:src="@drawable/p001" />
        <!-- Pokemon name with bar for health at the top left -->

        <!-- Pokemon image at the bottom left -->
        <ImageView
            android:id="@+id/player_pokemon_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="50dp"
            android:layout_marginBottom="150dp"
            android:scaleX="-1"
            android:src="@drawable/p731" />

        <!-- Add a boxe on the bottom with top corner rounded to display the attack -->
        <LinearLayout
            android:id="@+id/attack_box"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/background_plant_shape"
            android:orientation="vertical"
            android:padding="10dp">

            <!-- 4 attacks displayed in a grid -->
            <GridLayout
                android:id="@+id/attack_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:columnCount="2"
                android:rowCount="2">

                <Button
                    android:id="@+id/attack_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:background="@drawable/background_plant_shape"
                    android:padding="10dp"
                    android:text="Attack 1"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/attack_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:background="@drawable/background_plant_shape"
                    android:padding="10dp"
                    android:text="Attack 2"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/attack_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:background="@drawable/background_plant_shape"
                    android:padding="10dp"
                    android:text="Attack 3"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/attack_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:background="@drawable/background_plant_shape"
                    android:padding="10dp"
                    android:text="Attack 4"
                    android:textColor="#000000"
                    android:textSize="20sp" />

            </GridLayout>

        </LinearLayout>

    </RelativeLayout>

</layout>